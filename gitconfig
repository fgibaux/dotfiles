[color]
    ui = true
[alias]
    st = status
    co = checkout
    ci = commit
    hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    pt = !git tag -l | xargs git tag -d && git fetch -t
[core]
    editor = /usr/bin/vim
[tar "tar.xz"]
    command = xz -c
[push]
    default = simple
[include]
    path = ~/.gitconfig_local
